set boxwidth 0.75 absolute
set style fill solid 1.00 border -1
set style histogram rowstacked
set style data histograms
plot "$entrada" using 2:xtic(1) t ''
EOPLOT
close(GNUPLOT);
exit 0;
}
if ($teste eq "5") {
$grafico = "$dir_graficos/grafico_copias5.png";
$entrada = "$dir_testes/dados5";
open (GNUPLOT, "| gnuplot");
print GNUPLOT <<EOPLOT;
set term png
set output "$grafico"
set xlabel "Copiadores"
set ylabel "Número médio de Cópias"
set xrange[1:100]
set xtics 10
set ytics 10
set title "Teste 5 (m = 1000, n = 100)"
set boxwidth 0.75 absolute
set style fill solid 1.00 border -1
set style histogram rowstacked
set style data histograms
plot "$entrada" using 2 t ''
EOPLOT
close(GNUPLOT);
exit 0;
}
if ($teste eq "6") {
$grafico = "$dir_graficos/grafico_copias6.png";
$entrada = "$dir_testes/dados6";
open (GNUPLOT, "| gnuplot");
print GNUPLOT <<EOPLOT;
set term png
set output "$grafico"
