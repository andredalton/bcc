#!/usr/bin/perl

$teste = $ARGV[0];
$dir_ep = "/home/shin/Documents/IME/2011_1/Concorrente/ep1";
$dir_graficos = "$dir_ep/graficos";
$dir_testes = "$dir_ep/testes/feito";

if ($teste eq "1") {
$grafico = "$dir_graficos/grafico_copias1.png";
$entrada = "$dir_testes/dados1";
open (GNUPLOT, "| gnuplot");
print GNUPLOT <<EOPLOT;
set term png
set output "$grafico"
set xlabel "Copiadores"
set ylabel "Número médio de Cópias"
set xtics 1
set ytics 1
set title "Teste 1 (m = 10, n = 1)"
set boxwidth 0.75 absolute
set style fill solid 1.00 border -1
set style histogram rowstacked
set style data histograms
plot "$entrada" using 2:xtic(1) t ''
EOPLOT
close(GNUPLOT);
exit 0;
}
if ($teste eq "2") {
$grafico = "$dir_graficos/grafico_copias2.png";
$entrada = "$dir_testes/dados2";
open (GNUPLOT, "| gnuplot");
print GNUPLOT <<EOPLOT;
set term png
set output "$grafico"
set xlabel "Copiadores"
set ylabel "Número médio de Cópias"
set xtics 1
set ytics 10
set title "Teste 2 (m = 100, n = 1)"
set boxwidth 0.75 absolute
set style fill solid 1.00 border -1
set style histogram rowstacked
set style data histograms
plot "$entrada" using 2:xtic(1) t ''
EOPLOT
close(GNUPLOT);
exit 0;
}
if ($teste eq "3") {
$grafico = "$dir_graficos/grafico_copias3.png";
$entrada = "$dir_testes/dados3";
open (GNUPLOT, "| gnuplot");
print GNUPLOT <<EOPLOT;
set term png
set output "$grafico"
set xlabel "Copiadores"
set ylabel "Número médio de Cópias"
set xtics 1
set ytics 100
set title "Teste 3 (m = 1000, n = 1)"
set boxwidth 0.75 absolute
set style fill solid 1.00 border -1
set style histogram rowstacked
set style data histograms
plot "$entrada" using 2:xtic(1) t ''
EOPLOT
close(GNUPLOT);
exit 0;
}
if ($teste eq "4") {
$grafico = "$dir_graficos/grafico_copias4.png";
$entrada = "$dir_testes/dados4";
open (GNUPLOT, "| gnuplot");
